# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456
POSTGRES_DB=rollytics
POSTGRES_PORT=5432

# Database Connection String
# This is automatically constructed from the above variables in docker-compose.yml
# For local development, you can set this directly:
DB_DSN=postgres://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD:-123456}@postgres:5432/${POSTGRES_DB:-rollytics}?sslmode=disable

# Chain Configuration - REQUIRED
CHAIN_ID=
VM_TYPE=
RPC_URL=
REST_URL=
JSON_RPC_URL=

# Server Settings
PORT=8080
LOG_LEVEL=warn
LOG_FORMAT=json

# Database Settings
DB_MAX_CONNS=0
DB_IDLE_CONNS=2
DB_BATCH_SIZE=100
DB_AUTO_MIGRATE=false
DB_MIGRATION_DIR=orm/migrations

# Performance Settings
COOLING_DURATION=50ms
QUERY_TIMEOUT=30s
MAX_CONCURRENT_REQUESTS=50
POLLING_INTERVAL=3s

# Cache Settings
CACHE_SIZE=1000
CACHE_TTL=10m
ACCOUNT_CACHE_SIZE=40960
NFT_CACHE_SIZE=40960
MSG_TYPE_CACHE_SIZE=1024
TYPE_TAG_CACHE_SIZE=1024
EVM_TX_HASH_CACHE_SIZE=40960
EVM_DENOM_CONTRACT_CACHE_SIZE=10240

# Internal Transaction Settings (EVM only)
INTERNAL_TX=true
INTERNAL_TX_POLL_INTERVAL=5s
INTERNAL_TX_BATCH_SIZE=10
INTERNAL_TX_QUEUE_SIZE=100

# EVM Ret Cleanup Settings
EVM_RET_CLEANUP=true

# Rich List Settings
RICH_LIST=true

# Metrics Settings
METRICS_ENABLED=false
METRICS_PATH=/metrics
METRICS_PORT=9090

# CORS Settings
CORS_ENABLED=false
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS,HEAD
CORS_ALLOW_HEADERS=Origin, Content-Type, Accept, Authorization, X-Requested-With
CORS_ALLOW_CREDENTIALS=false
CORS_EXPOSE_HEADERS=
CORS_MAX_AGE=0

# Sentry Settings
SENTRY_DSN=
SENTRY_SAMPLE_RATE=0.01
SENTRY_TRACES_SAMPLE_RATE=0.01
SENTRY_PROFILES_SAMPLE_RATE=0.01
ENVIRONMENT=local

# Account Address Prefix
ACCOUNT_ADDRESS_PREFIX=init

# Indexer Start Height (optional)
# START_HEIGHT=

# Build Info (optional)
# VERSION=dev
# COMMIT_HASH=unknown


